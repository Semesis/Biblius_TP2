<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#C0C0C0"
    tools:context="ca.qc.android.cstj.biblius_tp2.fragments.SuccursaleDetailsFragment">


    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/lblAppelatifSuccursaleDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#510025"/>

    <View
        android:id="@+id/lblLigne1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        android:layout_below="@+id/lblAppelatifSuccursaleDetail"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/lblAdresseSuccursaleDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblLigne1"
        android:gravity="center"
        android:padding="2dp"
        android:textColor="#65002e"/>

    <RelativeLayout
        android:id="@+id/rlVilleProvince"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblAdresseSuccursaleDetail"
        android:gravity="center"
        android:padding="2dp">

        <TextView
            android:id="@+id/lblVilleSuccursaleDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#65002e"/>

        <TextView
            android:id="@+id/lblProvinceSuccursaleDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/lblVilleSuccursaleDetail"
            android:textColor="#65002e"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/lblCodePostalSuccursaleDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/rlVilleProvince"
        android:padding="2dp"
        android:textColor="#65002e"/>

    <View
        android:id="@+id/lblLigne2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        android:layout_below="@+id/lblCodePostalSuccursaleDetail"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rlTelephone"
        android:layout_below="@id/lblLigne2"
        android:gravity="center"
        android:padding="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblTelephone"
            android:text="  Téléphone : "
            android:textStyle="bold"
            android:textColor="#510025"/>

        <TextView
            android:id="@+id/lblTelephoneSuccursaleDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/lblTelephone"
            android:gravity="center"
            android:textColor="#65002e"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rlTelecopieur"
        android:layout_below="@id/rlTelephone"
        android:gravity="center"
        android:padding="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblTelecopieur"
            android:text="Télécopieur : "
            android:textStyle="bold"
            android:textColor="#510025"/>

        <TextView
            android:id="@+id/lblTelecopieurSuccursaleDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/lblTelecopieur"
            android:gravity="center"
            android:textColor="#65002e"/>

    </RelativeLayout>

    <View
        android:id="@+id/lblLigne3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        android:layout_below="@+id/rlTelecopieur"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/lblInformationSuccursaleDetail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblLigne3"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="#65002e"/>

</RelativeLayout>











